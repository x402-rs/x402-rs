# Protocol Compliance Test Harness
# This justfile delegates to the root justfile

# Install dependencies
install:
    pnpm install

# Type check
typecheck:
    pnpm typecheck

# Run all tests
test-all:
    pnpm test

# Run specific test file
test FILE='':
    pnpm vitest run {{FILE}}

# Run tests matching pattern
test-pattern PATTERN='':
    pnpm vitest run -t {{PATTERN}}

# Watch mode
test-watch:
    pnpm test:watch

# Run CLI manually
run ARGS='':
    pnpm run {{ARGS}}
